<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <title>Mantis Projekt</title>
    <link
      rel="shortcut icon"
      href="{{ request.static_url('mantis:static/pyramid-16x16.png') }}"
    />
    <link
      href="{{ request.static_url('mantis:static/tailwind.min.css') }}"
      rel="stylesheet"
    />
    <link
      href="{{ request.static_url('mantis:static/theme.css') }}"
      rel="stylesheet"
    />
  </head>
  <body class="antialiased">
    <div class="bg-gray-100 border-b">
      <!-- Navbar Start -->
      <nav class="sticky top-0 bg-green-900">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between h-16">
            <!-- Logo -->
            <div class="flex-shrink-0 flex items-center">
              <a href="/">
                <img
                  src="{{
                    request.static_url('mantis:static/images/logo.png')
                  }}"
                  alt="Logo"
                  class="h-12"
                />
              </a>
            </div>

            <!-- Links -->
            <div class="hidden sm:flex sm:items-center">
              <ul class="flex space-x-4">
                <li>
                  <a href="/" class="text-white font-bold hover:text-green-600"
                    >Home</a
                  >
                </li>
                <li>
                  <a
                    href="/faq"
                    class="text-white font-bold hover:text-green-600"
                    >FAQ</a
                  >
                </li>
                <li>
                  <a
                    href="/impressum"
                    class="text-white font-bold hover:text-green-600"
                    >Impressum</a
                  >
                </li>
              </ul>
            </div>

            <!-- Hamburger -->
            <div class="flex items-center sm:hidden">
              <button id="navbar-toggle">
                <svg
                  class="w-6 h-6 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 6h16M4 12h16M4 18h16"
                  ></path>
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Mobile Menu -->
        <div class="sm:hidden" id="mobile-menu">
          <ul class="flex flex-col items-center justify-center h-screen w-full">
            <li class="py-4">
              <a
                href="/"
                class="text-white font-bold hover:text-green-600"
                onclick="closeMobileMenu()"
                >Home</a
              >
            </li>
            <li class="py-4">
              <a
                href="/faq"
                class="text-white font-bold hover:text-green-600"
                onclick="closeMobileMenu()"
                >FAQ</a
              >
            </li>
            <li class="py-4">
              <a
                href="/impressum"
                class="text-white font-bold hover:text-green-600"
                onclick="closeMobileMenu()"
                >Impressum</a
              >
            </li>
          </ul>
        </div>
      </nav>
      <!-- Navbar End -->

      <script>
        const navbarToggle = document.getElementById("navbar-toggle");
        const mobileMenu = document.getElementById("mobile-menu");

        navbarToggle.addEventListener("click", () => {
          mobileMenu.classList.toggle("hidden");
        });

        // Add event listeners to close mobile menu after item is clicked
        const mobileLinks = document.querySelectorAll("#mobile-menu a");

        mobileLinks.forEach((link) => {
          link.addEventListener("click", () => {
            mobileMenu.classList.add("hidden");
          });
        });

        function closeMobileMenu() {
          mobileMenu.classList.add("hidden");
        }
      </script>
    </div>

    <!--!Green Content Start-->
    <div class="grid grid-cols-1 md:grid-cols-2 bg-green-900 p-10">
      <div class="block md:flex items-center h-full">
        <!--responsive Picture-->
        <img
          src="{{ request.static_url('mantis:static/images/topBar.jpg') }}"
          alt="Image"
          class="object-center rounded-lg"
        />
      </div>

      <div class="p-10 w-full text-white">
        <h1 class="mb-10 text-6xl font-bold">
          {% block title %} {% endblock title %}
        </h1>
        <p class="mb-6 text-lg">{% block text %} {% endblock text %}</p>
        <!--todo add pages where no report button should appear-->
        {% if request.path == '/' %}
        <a href="/newitem">
          <button
            class="transition duration-500 ease-in-out bg-green-800 hover:bg-green-700 px-8 py-4 mr-4 font-extrabold text-white rounded-md text-1xl"
          >
            Melden
          </button>
        </a>
        {% endif %}
      </div>
    </div>
    <!--! Green Content Stop-->

    <!--! Whhite Content Start-->
    <div class="flex flex-wrap">
      <div class="flex-auto">{% block left%} {%endblock%}</div>

      <div class="flex-auto">{% block content %} {% endblock content %}</div>

      <div class="flex-auto">{% block right%} {%endblock%}</div>
    </div>
    <!--! White Content End-->

    <!--! Start Footer -->
    <!--https://tailwindcomponents.com/component/footer-5-->
    <footer class="relative bg-gray-200 pt-8 pb-6">
      <div class="container mx-auto px-4">
        <div class="flex flex-wrap text-left lg:text-left">
          <div class="w-full lg:w-6/12 px-4">
            <h4 class="text-3xl fonat-semibold text-blueGray-700">
              Naturkunde Museum Potsdam
            </h4>
            <h5 class="text-lg mt-0 mb-2 text-blueGray-600">
              Wir sind ein Museum für Naturkunde und Naturgeschichte in Potsdam.
              Wir zeigen die Vielfalt der Natur und ihre Geschichte.
            </h5>
          </div>
          <div class="w-full lg:w-6/12 px-4">
            <div class="flex flex-wrap items-top mb-6">
              <div class="w-full lg:w-4/12 px-4 ml-auto">
                <span
                  class="block uppercase text-blueGray-500 text-sm font-semibold mb-2"
                  >Useful Links</span
                >
                <ul class="list-unstyled">
                  <li>
                    <a
                      class="text-blueGray-600 hover:text-blueGray-800 font-semibold block pb-2 text-sm"
                      href="/#"
                      >About Us</a
                    >
                  </li>
                  <li>
                    <a
                      class="text-blueGray-600 hover:text-blueGray-800 font-semibold block pb-2 text-sm"
                      href="/admin"
                      >Admin</a
                    >
                  </li>
                  <li>
                    <a
                      class="text-blueGray-600 hover:text-blueGray-800 font-semibold block pb-2 text-sm"
                      href="/#"
                      >GitLab</a
                    >
                  </li>
                  <li>
                    <a
                      class="text-blueGray-600 hover:text-blueGray-800 font-semibold block pb-2 text-sm"
                      href="/reportanissue"
                      >Report an Issue</a
                    >
                  </li>
                </ul>
              </div>
              <div class="w-full lg:w-4/12 px-4">
                <span
                  class="block uppercase text-blueGray-500 text-sm font-semibold mb-2"
                  >Other Resources</span
                >
                <ul class="list-unstyled">
                  <li>
                    <a
                      class="text-blueGray-600 hover:text-blueGray-800 font-semibold block pb-2 text-sm"
                      href="/#"
                      >MIT License</a
                    >
                  </li>
                  <li>
                    <a
                      class="text-blueGray-600 hover:text-blueGray-800 font-semibold block pb-2 text-sm"
                      href="/#"
                      >Terms &amp; Conditions</a
                    >
                  </li>
                  <li>
                    <a
                      class="text-blueGray-600 hover:text-blueGray-800 font-semibold block pb-2 text-sm"
                      href="/#"
                      >Privacy Policy</a
                    >
                  </li>
                  <li>
                    <a
                      class="text-blueGray-600 hover:text-blueGray-800 font-semibold block pb-2 text-sm"
                      href="/#"
                      >Contact Us</a
                    >
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <hr class="my-6 border-blueGray-300" />
        <div
          class="flex flex-wrap items-center md:justify-between justify-center"
        >
          <div class="w-full md:w-4/12 px-4 mx-auto text-center">
            <div class="text-sm text-blueGray-500 font-semibold py-1">
              Copyright © <span id="get-current-year">2023</span
              ><a class="text-blueGray-500 hover:text-gray-800" target="_blank">
                Ich bin schön
              </a>
              <a class="text-blueGray-500 hover:text-blueGray-800">Bananen</a>.
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
