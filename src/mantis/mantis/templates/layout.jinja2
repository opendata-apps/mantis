<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <title>Mantis Projekt</title>
    <link
      rel="shortcut icon"
      href="{{ request.static_url('mantis:static/pyramid-16x16.png') }}"
    />
    <link
      href="{{ request.static_url('mantis:static/tailwind.min.css') }}"
      rel="stylesheet"
    />
    <link
      href="{{ request.static_url('mantis:static/theme.css') }}"
      rel="stylesheet"
    />
  </head>

  <!--! Navbar Start -->

  <body class="flex flex-col min-h-screen">
    <nav class="flex items-center justify-between px-4 bg-green-900">
      <div class="flex items-center">
        <img
          src="{{ request.static_url('mantis:static/images/logo.png') }}"
          alt="Logo"
          class="h-24 mr-20 -mb-1"
        />
        <ul class="flex items-center">
          <li>
            <a href="/" class="mr-4 font-bold text-white hover:text-green-600"
              >Home</a
            >
          </li>
          <li>
            <a
              href="/faq"
              class="mr-4 font-bold text-white hover:text-green-700"
              >FAQ</a
            >
          </li>
          <li>
            <a
              href="/impressum"
              class="mr-4 font-bold text-white hover:text-green-400"
              >Impressum</a
            >
          </li>
        </ul>
      </div>
      <button
        class="px-4 py-2 mr-4 text-white bg-green-800 rounded-full hover:bg-green-700"
      >
        Button
      </button>
    </nav>
    <!--! Navbar End -->

    <!--!Green Content Start-->
    <main class="flex-1 bg-gray-100">
      <section class="bg-green-900">
        <div
          class="container flex items-center justify-between px-4 py-8 mx-auto"
        >
          <div class="w-full lg:w-1/2">
            <img
              src="{{ request.static_url('mantis:static/images/topBar.jpg') }}"
              alt="Image"
              class="w-full mb-8 -ml-8 rounded-lg shadow-xl"
            />
          </div>
          <div class="w-full text-white lg:w-1/2">
            <h1 class="mb-10 text-6xl font-bold">
              {% block title %} {% endblock title %}
            </h1>
            <p class="mb-6 text-lg">{% block text %} {% endblock text %}</p>
            <!--todo add pages where no report button should appear-->
            {% if request.path == '/' %}
            <a href="/report">
              <button
                class="px-8 py-4 mr-4 font-extrabold text-white bg-green-800 rounded-full text-1xl hover:bg-green-700"
              >
                Melden
              </button>
            </a>
            {% endif %}
          </div>
        </div>
      </section>
      <!--! Green Content Stop-->

      <!--! Whhite Content Start-->
      <div class="container px-4 py-8 mx-auto">
        <div class="basis-1/4"></div>

        <div class="basis-1/2">{% block content %} {% endblock content %}</div>

        <div class="basis-1/4"></div>
      </div>
      <!--! White Content End-->
    </main>
    <!--! Start Footer -->
    <footer class="flex flex-col items-center py-8 bg-gray-200">
      <div class="container flex flex-col items-center px-4 mx-auto">
        <p class="text-sm text-center text-gray-700">
          &copy; 2022 P22. All rights reserved.
        </p>
        <!--? DarkMode button sun moon-->
        <div class="flex items-center justify-center mt-4">
          <button
            class="flex items-center justify-center w-10 h-10 text-gray-800 bg-gray-200 rounded-full hover:bg-gray-300"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path d="M12 4v16m8-8H4"></path>
            </svg>
          </button>
          <!--? Admin Center Icon-->
          <div>
            <a href="/admin">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M10.5 6h9.75M10.5 6a1.5 1.5 0 11-3 0m3 0a1.5 1.5 0 10-3 0M3.75 6H7.5m3 12h9.75m-9.75 0a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m-3.75 0H7.5m9-6h3.75m-3.75 0a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m-9.75 0h9.75"
                />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
